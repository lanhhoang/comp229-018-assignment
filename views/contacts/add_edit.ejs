<% include ../partials/header.ejs %>
  <!-- Contact Add/Edit page -->
  <div class="container">
    <div class="row">
      <div class="offset-md-3 col-md-6">
        <h1 class="text-center"><%= title %></h1>
        <div class="d-flex justify-content-center">
          <hr class="border border-dark border-2 opacity-50 w-25" />
        </div>

        <form class="form" method="POST" validate>
          <div class="form-group">
            <input type="hidden" name="id" value="<%= contact._id %>" />
          </div>
          <div class="form-group">
            <label for="nameTextField">Name</label>
            <input
              type="text"
              class="form-control"
              id="nameTextField"
              placeholder="Enter contact name"
              name="name"
              value="<%= contact.name %>"
              required
            />
          </div>
          <br />
          <div class="form-group">
            <label for="phoneNumberTextField">Phone Number</label>
            <input
              type="tel"
              class="form-control"
              id="phoneNumberTextField"
              placeholder="Enter contact phone number, format: 123-456-7890"
              name="phone_number"
              value="<%= contact.phoneNumber %>"
              required
            />
          </div>
          <br />
          <div class="form-group">
            <label for="emailTextField">Email</label>
            <input
              type="email"
              class="form-control"
              id="emailTextField"
              placeholder="Enter contact email"
              name="email"
              value="<%= contact.email %>"
              required
            />
          </div>
          <br />
          <button class="btn btn-primary" type="submit">
            <i class="fa-solid fa-pen-to-square"></i>
            Submit
          </button>
          <a href="/contacts" class="btn btn-warning">
            <i class="fa-solid fa-rotate-left"></i>
            Cancel
          </a>
          <% if (title == "Edit Contact") { %>
            <a href="/contacts/delete/<%= contact._id %>" class="btn btn-danger">
              <i class="fa-solid fa-trash"></i>
              Delete
            </a>
          <% } %>
        </form>
      </div>
    </div>
  </div>
<% include ../partials/footer.ejs %>
